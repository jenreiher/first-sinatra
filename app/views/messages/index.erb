<% @messages.each do |message| %>
  <div class ="message">
    <h3><a href="/messages/<%= message.id %>"><small>(by: <%= message.author %>)</small></a></h3>
    <p>
      <%= message.content %><br>
      <a href="%= message.url %"><%= message.url %></a>
    </p>
  </div>
<% end %>

<a href="/messages/new">Post a message... It's FREE (for now)!</a>

